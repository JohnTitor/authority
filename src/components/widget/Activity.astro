---
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import WidgetLayout from "./WidgetLayout.astro";

interface Props {
	class?: string;
	style?: string;
}

const className = Astro.props.class;
const style = Astro.props.style;
---

<WidgetLayout name={i18n(I18nKey.activity)} id="activity" class={className} style={style}>
	<div class="flex flex-col gap-3">
		<p class="text-sm text-neutral-500 dark:text-neutral-400">
			Check my recent OSS activities and contributions.
		</p>
		<a href="https://activity.2k36.org" target="_blank" class="btn-regular h-10 rounded-lg w-full font-bold active:scale-95">
			Visit activity log
		</a>
	</div>
</WidgetLayout>
